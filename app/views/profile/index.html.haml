#wrap
  .content
    %div
      #layout
        .left-column
          .avatar
            = image_tag '/profile/bender.jpg'
          .btn-container
            - if @user.id != current_user.id
              %button{:type=> 'button', :class => 'btn btn-primary', :id=>'message-btn', 'data-target'=>'#messageModal',
              'data-toggle' => 'modal'} Send a message
        .right-column
          %h3
            = @user.name
          - if @user.role == 'contractor'
            %h3 Portfolio
            .container.demo-4
              .main
                .gallery
                  %ul{:class=>'elastislide-list', :id=>'carousel'}
                    - @images.each do |image|
                      %li{'data-preview'=> image.src.url(:original)}
                        %a{:href=> '#'}
                          = image_tag image.src.url(:small)
                  .image-preview
                    %img{:id=>'preview'}
          - if @user.role == 'client'
            %h4 Events list
            #events-container-profile
              - @events.each do |event|
                %h4
                  = link_to event.title, '/users/'+@user.id.to_s+'/events/'+event.id.to_s
                #date-container-1
                  %p
                    %h4 Date:
                    =event.start.strftime("%m/%d/%Y")
                  %br
#messageModal.modal.hide.fade
  = render :partial => "messages/new_message", :locals => {:contact_id => @user.id}
= javascript_include_tag "profile"