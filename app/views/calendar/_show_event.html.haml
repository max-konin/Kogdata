      =t :the_event
    %table
      %tr
        %th
          %label
            =t :title
        %td
          %label{ :class=> 'title-label' }
      %tr
        %th
          %label
            =t :description
        %td
          .description-label
  = link_to t(:to_event), 'users/'+current_user.id.to_s+'/events/'+@event_id.to_s