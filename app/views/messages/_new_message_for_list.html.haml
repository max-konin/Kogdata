= stylesheet_link_tag 'home'
.mainbox
  =form_for Message.new, :url => {:controller => 'conversations', :action => 'create_message',
  :id => @conversation.id} do |f|
    =f.text_area :body, :placeholder => (t :new_message),  :class=>'span2', :id=> 'send-message-input'
    =f.submit 'Send', :class => 'btn btn-small btn-inverse',:id=> 'send-message-button-for-list'