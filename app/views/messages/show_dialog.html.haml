= stylesheet_link_tag 'home'
.mainbox
  .well
    .btn-toolbar
      %button{:class => 'btn pull-left', :type => 'submit'} New message
      %h3{:align=>'center'} YOUR MESSAGES
  -if @messages.nil?
    %p You have no messages from this user yet
  -else
  -@messages.each do |message|
    .well.well-small
      .navbar
        %h6{:align=>'left'}= message.recipient.name
        .btn-group.pull-right
          %button{:class => 'btn', :type => 'submit'} Reply
        %p{:align=>'left'}= message.body
        %P{:align=>'left'}Received at
        %p{:align=>'left'}= message.created_at