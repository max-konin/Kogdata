.mainbox
  #blac-div.modal-header
    %h5
      = ((t :new_message_for) + User.find(contact_id).name)
      #for-close
        %a{'data-dismiss'=> 'modal',:id=> 'close-button'}
          = t :close
  =form_for Message.new, :url => {:controller => 'conversations', :action => 'create_message',
  :members => [contact_id]} do |f|
    .modal-body
      =f.text_area :body, :class=>'span2', :id=> 'send-message-input',
                   :placeholder => ((t :new_message_for) + User.find(contact_id).name)
    .modal-footer
      =f.submit t :send, :class => 'btn btn-small btn-inverse',:id=> 'send-message-button';
