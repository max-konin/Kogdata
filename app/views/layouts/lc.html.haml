%html
  %head
    =javascript_include_tag "application"
    =stylesheet_link_tag 'application'
    %title Kogdata
  %body
    %p.notice
      = notice
    %p.alert
      = alert
    = if user_signed_in? then render 'application/header_authorized' else render 'application/header' end
    .sidebar
      .hero-unit
        %ul{:class => 'nav nav-list'}
          %li{:class=>'nav-header'}
            %a{:href=>'index'}
              %h4 Personal Page
          %li
            %a{:href=>'profile_update'} Change profile
          %li
            %a{:href=>'show_all'} Messages
    = yield
