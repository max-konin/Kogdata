- users.each do |user|
  .row-fluid
    .span4
      %h4
        =link_to user.name, user
    .span4
      %h4
        =t(user.role)
    .span4.text-right
      %button{:type=> 'button', :class => 'btn btn-primary', :id=>'message-btn',
                    'data-target'=>'#messageModal_' + user.id.to_s,
                    'data-toggle' => 'modal'}
        = t :send_message
      .modal.hide.fade{:id => 'messageModal_' + user.id.to_s}
        = render :partial => "messages/new_message", :locals => {:contact_id => user.id}
