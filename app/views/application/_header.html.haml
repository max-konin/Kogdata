.navbar.navbar-inverse.navbar-fixed-top
	.navbar-inner
		.container
			%a{:class => 'brand', :href=> '/'}
				kogdata
				%sup beta
			%ul.nav.pull-right
				-if user_signed_in?
					%li.calendar-icon
						= link_to '', :root
					%li.messages-icon
						%a{:href => :conversations}
							%p
								0
					%li.user-name
						%p
							= link_to current_user.name, current_user
					%li.avatar
						= image_tag current_user.avatar(:thumb)
					%li.splitter
					%li.exit
						= link_to t(:sign_out), destroy_user_session_path
				-else
					%li
						%a{:href => "/users/sign_in"}
							= t(:sign_in)
					%li
						%a{:href => "/users/sign_up"}
							= t(:sign_up)
.navbar_padding_elem
