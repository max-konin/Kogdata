.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %button{:type=> 'button', :class=> 'btn btn-navbar collapsed', 'data-toggle'=>'collapse','data-target'=>'.nav-colapse' }
        %span{:class=>'icon-bar'}
        %span{:class=>'icon-bar'}
        %span{:class=>'icon-bar'}
      %a{:class => 'brand', :href=> '/'}
        Kogdata
        %sup beta
      %ul.nav.pull-right
        %li.divider-vertical
        -if user_signed_in?
          %li
            = link_to t(:office).mb_chars.upcase, "/office"
          %li.divider-vertical
          %li
            = link_to t(:sign_out).mb_chars.upcase, destroy_user_session_path
        -else
          %li
            %a{:href => "/users/sign_in"}
              = t(:sign_in).mb_chars.upcase
          %li
            %a{:href => "/users/sign_up"}
              = t(:sign_up).mb_chars.upcase
