#events-container
	%div
		%p
			%h4
				= t(:date_text) + ':'
				=@event.start.strftime("%d.%m.%Y")
		%p
			%h4
				= t(:description) + ': '
			=@event.description
			-if @event.user_id == @user.id
				%h4
					= t(:recalls)  + ': ' + @event.responses.count.to_s
				= render @event.responses
			-else
				- if @response
					= render 'responses/delete_form'
				-else
					-if current_user.role == 'contractor'
						%div
							= render 'responses/form'
			#messageModal.modal.hide.fade
				= render :partial => 'messages/new_response_to_event', :locals => {:event => @event}
