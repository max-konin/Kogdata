.container
  %h2.span10.offset3 Sign up to Kogdata
  .container-fluid
    .row-fluid
      .span3.offset3
        //= render "devise/shared/links"
        %a.btn.social-btn.btn-inverse{:href => "/users/auth/vkontakte"} Log in with vkontakte
        %a.btn.social-btn.btn-info{:href => "/users/auth/twitter"} Log in with Twitter
        %a.btn.social-btn.btn-primary{:href => "/users/auth/facebok"} Log in with Twitter
      .span6
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          %div
            = f.label :email
            = f.email_field :email, :autofocus => true
          %div
            = f.label :password
            = f.password_field :password
          %div= f.submit "Sign up"

