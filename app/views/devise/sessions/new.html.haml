.container#forms
  %h2.span8.offset4 #{t :sign_in_to} Kogdata
  .container-fluid
    .row-fluid
      .span3.offset3
        //= render "devise/shared/links"
        %a.btn.social-btn.btn-inverse{:href => "/users/auth/vkontakte"} #{t(:sign_in_with)} vkontakte
        %a.btn.social-btn.btn-info{:href => "/users/auth/twitter"} #{t(:sign_in_with)} twitter
        %a.btn.social-btn.btn-primary{:href => "/users/auth/facebook"} #{t(:sign_in_with)} facebook
      .span6
        %br
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = devise_error_messages!
          .control-group
            = f.email_field :email, :class => 'large', :autofocus => true,  :placeholder => t(:email)
          .control-group
            = f.password_field :password, :class => 'large', :placeholder => t(:password)
          .control-group
            .controls
              %label.checkbox
                = f.check_box :remember_me
                = t(:remember_me)
          .control-group
            = f.submit t(:sign_in), :class => "btn btn-danger btn-large"